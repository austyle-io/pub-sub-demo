{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "./dist",
    "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@collab-edit/shared": ["../../packages/shared/src"],
      "@collab-edit/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
