{
  "name": "collab-edit-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Collaborative document editing demo application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "generate:openapi": "pnpm --filter @collab-edit/shared run generate:openapi"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@types/sharedb": "^5.1.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
