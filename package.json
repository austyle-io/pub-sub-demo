{
  "name": "collab-edit-demo",
  "version": "1.0.0",
  "private": true,
  "description": "Collaborative document editing demo application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:full": "./scripts/quality/lint-safe.sh",
    "lint:shell": "./scripts/quality/shellcheck.sh",
    "lint:markdown": "./scripts/quality/markdownlint.sh",
    "format": "biome format --write .",
    "type-check": "pnpm exec tsc -p apps/client/tsconfig.json --noEmit && pnpm exec tsc -p apps/server/tsconfig.json --noEmit && pnpm exec tsc -p packages/shared/tsconfig.json --noEmit",
    "generate:openapi": "pnpm --filter @collab-edit/shared run generate:openapi",
    "test:e2e": "playwright test --config=test/e2e/setup/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config=test/e2e/setup/playwright.config.ts",
    "test:e2e:debug": "playwright test --debug --config=test/e2e/setup/playwright.config.ts",
    "test:e2e:report": "playwright show-report test/e2e/reports/html",
    "test:e2e:install": "playwright install",
    "test:e2e:setup": "playwright install && make db-reset"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/node": "^20.10.6",
    "@types/sharedb": "^5.1.0",
    "@vitest/coverage-v8": "^2.1.9",
    "markdownlint-cli2": "^0.18.1",
    "mongodb": "^6.12.0",
    "pino-http": "^8.3.0",
    "pino-pretty": "^10.2.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "ws": "^8.18.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "@types/lodash": "^4.14.201",
    "dompurify": "^3.2.6",
    "lodash": "^4.17.21",
    "pino": "^8.15.0"
  }
}
