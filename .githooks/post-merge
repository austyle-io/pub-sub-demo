#!/bin/bash
# Git post-merge hook
# Ensures agent hook symbolic links are up-to-date after a pull.

set -euo pipefail

# Color codes
BLUE='\033[0;34m'
NC='\033[0m'

# Change to project root
cd "$(git rev-parse --show-toplevel)" || exit 1

echo -e "${BLUE}[Post-Merge Hook]${NC} Checking agent hook setup..."

# Run the setup script
./scripts/setup/setup-hooks.sh
